<% include partials/header %>
<header class="masthead" style="background-image: url('/img/sports.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Sports in Victoria</h1>
              <!--<span class="subheading">Personal information and tracking records</span>-->
            </div>
      </div>
    </header>

    <div class="container" id = "1">
          <div class="row">
            <div class="col-sm-12">  
              <p><i class="material-icons">arrow_downward</i>Click the name to see real time weather, map and facility detailed info or <b><a class="btn btn-info" onclick="openForm()">Search another sport</a></b></p>
          <table class="display" id="example" style="width:100%">
        <thead>
            <tr>
                <th>Facility Name</th>
                <th>Postcode</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
          <% recreations.forEach(function(recreation){ %>
            <tr>
                <td><a href = "/recreations/<%= recreation._id %>"><%= recreation.FacilityName %></a></td>
                <td><%= recreation.Postcode %></td>
                <td><%= recreation.SportsPlayed %></td>
            </tr>
            <% }) %>
            </tbody>
        <tfoot>
            <tr>
                <th>Facility Name</th>
                <th>Postcode</th>
                <th>Type</th>
            </tr>
        </tfoot>
    </table>
    
        </div>
        </div>
      </div>
      <div class="form-popup" id="myForm">
                      <form action="/recreations" class="form-container">
                        <label for="sport"><h3>Your favourite sport</h3></label>
                        <!--<input type="text" placeholder="Enter Favorite Sports, type nothing get all" maxlength="20" pattern="[A-Za-z ]+" name="sport" title="Only letters allowed">-->
                        <select id="sport" class="form-control" name="sport">
                          <option selected >Football</option>
                          <option>Gym</option>
                          <option>Tennis</option>
                          <option>Soccer</option>
                          <option>Cricket</option>
                          <option>Cycling</option>
                          <option>Bowl</option>
                          <option>Skating</option>
                          <option>Swimming</option>
                          <option>Surf</option>
                          <option>Netball</option>
                          <option>Golf</option>
                          <option>Rugby</option>
                          <option>Volleyball</option>
                          <option>BMX</option>
                          <option>Basketball</option>
                          <option>Equestrian</option>
                          <option>Table Tennis</option>
                          <option>Motor sport</option>
                          <option>Baseball</option>
                          <option>Martial Arts</option>
                          <option>Sailing</option>
                          <option>Badminton</option>
                          <option>Boxing</option>
                          <option>Squash</option>
                          <option>Hockey</option>
                          <option>Billiard</option>
                          <option>Lacrosse</option>
                          <option>Softball</option>
                        </select>
                        <br>
                        <button type="submit" class="btn">GO</button>
                        <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
                      </form>
                    </div>

                    <script>
                    function openForm() {
                        document.getElementById("myForm").style.display = "block";
                    }
                    
                    function closeForm() {
                        document.getElementById("myForm").style.display = "none";
                    }
                    </script>
    
<% include partials/footer %>