<% include partials/header %>
<header class="masthead" style="background-image: url('/img/sports.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Sports in Victoria</h1>
              <!--<span class="subheading">Personal information and tracking records</span>-->
            </div>
      </div>
    </header>

    <div class="container" id = "1">
          <div class="row">
            <div class="col-sm-12">  
              <p><i class="material-icons">arrow_downward</i>Click the name to see real time weather, map and facility detailed info</p>
          <table class="display" id="example" style="width:100%">
        <thead>
            <tr>
                <th>Facility Name</th>
                <th>Postcode</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
          <% recreations.forEach(function(recreation){ %>
            <tr>
                <td><a href = "/recreations/<%= recreation._id %>"><%= recreation.FacilityName %></a></td>
                <td><%= recreation.Postcode %></td>
                <td><%= recreation.SportsPlayed %></td>
            </tr>
            <% }) %>
            </tbody>
        <tfoot>
            <tr>
                <th>Facility Name</th>
                <th>Postcode</th>
                <th>Type</th>
            </tr>
        </tfoot>
    </table>
        </div>
        </div>
      </div>
    
<% include partials/footer %>