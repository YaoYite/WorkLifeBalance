                    <input class="form-control" type="text" name="sleep" placeholder="sleep">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="work" placeholder="work">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sport" placeholder="sport">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="leisure" placeholder="leisure">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/records">Go Back</a>
        </div>
    </div>
</div>

