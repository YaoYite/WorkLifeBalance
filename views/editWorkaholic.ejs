<% include partials/header %>
<header class="masthead" style="background-image: url('/img/life-min.jpeg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Change the information of tracked person</h1>
              <span class="subheading">Have you ever wondered how many time your loved one spend with you? The happy memory of the family is the key</span>
            </div>
          </div>
        </div>
      </div>
    </header>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= workaholic.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/workaholics/<%= workaholic._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="workaholic[name]" value="<%= workaholic.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="workaholic[email]" value="<%= workaholic.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="workaholic[gender]" value="<%= workaholic.gender %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="workaholic[age]" value="<%= workaholic.age %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="workaholic[relation]" value="<%= workaholic.relation %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="workaholic[occupation]" value="<%= workaholic.occupation %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/workaholics">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>

