<% include partials/header %>
<header class="masthead" style="background-image: url('/img/track-min.jpeg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Edit </h1>
              <span class="subheading">Edit the information of the person being tracked</span>
            </div>
          </div>
        </div>
      </div>
    </header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto"> 
        <h1 style="text-align: center">Edit <%= workaholic.name %></h1>
            <form action="/workaholics/<%= workaholic._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <label for="inputName4">Name</label>
                  <input type="text" required maxlength="50" pattern="[A-Za-z0-9 ]+" title="Only number and letters allowed" class="form-control" id="inputName4" name="workaholic[name]" value="<%= workaholic.name %>">
                </div>
                <div class="form-group">
                  <label for="inputEmail4">Email</label>
                  <input type="email" required maxlength="50" class="form-control" id="inputEmail4" name="workaholic[email]" value="<%= workaholic.email %>">
                </div>
              <div class="form-group" >
                <label for="inputAgw">Age</label>
                <input type="number" required min="12" max="100" class="form-control" id="inputAge" name="workaholic[age]" value="<%= workaholic.age %>">
              </div>
              <div class="form-group">
                <label for="inputOccupation">Occupation</label>
                <input type="text" maxlength="50" required pattern="[A-Za-z0-9 ]+" title="Only number and letters allowed" class="form-control" id="inputOccupation" name="workaholic[occupation]" value = "<%= workaholic.occupation %>">
              </div>
                <div class="form-group ">
                  <label for="inputGender">Gender</label>
                  <select id="inputGender" required class="form-control" name="workaholic[gender]" >
                    <option selected ><%= workaholic.gender %></option>
                    <option>Male</option>
                    <option>Female</option>
                  </select>
                </div>
                <div class="form-group ">
                  <label for="inputRelation">Relation With Your</label>
                  <select id="inputRelation" required class="form-control" name="workaholic[relation]" >
                    <option selected><%= workaholic.relation %></option>
                    <option>Husband</option>
                    <option>Wife</option>
                    <option>Father</option>
                    <option>Mother</option>
                  </select>
                </div>
                <div class="form-group ">
                  <label for="inputRelation">What is his/her favourate hobby?</label>
                  <select id="inputRelation" required class="form-control" name = "workaholic[hobby]">
                    <option selected><%= workaholic.hobby %></option>
                    <option>Watch TV, a video or DVD</option>
                    <option>Have a cup of tea or coffee</option>
                    <option>Go on a holiday or travelling</option>
                    <option>Go out to a restaurant</option>
                    <option>Throwing or attending a BBQ</option>
                    <option>Listening to music or radio</option>
                    <option>Go to the cinema</option>
                    <option>Cooking or Baking</option>
                    <option>Shopping</option>
                    <option>Participating in sports and active recreation</option>
                  </select>
                </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <p>            </p>
            <a href="/workaholics/<%= workaholic._id %>"  class = "btn btn-secondary">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>

