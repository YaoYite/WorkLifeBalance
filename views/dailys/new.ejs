<% include ../partials/header %>
<header class="masthead" style="background-image: url('/img/life-min.jpeg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Add new workaholic</h1>
              <span class="subheading">please enter the information of the workaholic that you want to track</span>
            </div>
          </div>
        </div>
      </div>
    </header>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= workaholic.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/workaholics/<%= workaholic._id %>/dailys" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[date]" placeholder="date">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[careofchildren]" placeholder="careofchildren">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[teachhelpchildren]" placeholder="teachhelpchildren">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[playreadtalkwithchildren]" placeholder="playreadtalkwithchildren">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[socialcommunity]" placeholder="socialcommunity">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[sportoutdoor]" placeholder="sportoutdoor">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[hobbyarts]" placeholder="hobbyarts">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[media]" placeholder="media">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="daily[talkingreadingwriting]" placeholder="talkingreadingwriting">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/workaholics">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

