<% include ../partials/header %>
<header class="masthead" style="background-image: url('/img/daily-min.jpeg')">
    <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Edit the daily record</h1>
              <span class="subheading"></span>
            </div>
          </div>
        </div>
      </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">  
            <form action="/workaholics/<%= workaholic_id %>/dailys/<%= daily._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <label for="datepicker">Date</label>
                  <input type="date" required class="form-control" id="datepicker" name="daily[date]" value="<%= daily.date %>">
                </div>
                <p>              </p>
                <div class="col-sm-8">
                  <div class="thumbnail">
                      <img  src="/img/memory-min.jpeg" style = "width:100%">
                  </div>
                </div>
                <div class="form-group ">
                  <label for="inputFamily">How much time does he/she spend with family (hour)</label>
                  <select id="inputFamily" required min="0" max="24" class="form-control" name="daily[family]" >
                    <option selected ><%= daily.family %></option>
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                    <option>11</option>
                    <option>12</option>
                    <option>13</option>
                    <option>14</option>
                    <option>15</option>
                    <option>16</option>
                  </select>
                </div>
                <p>              </p>
                <div class="col-sm-8">
                  <div class="thumbnail">
                      <img  src="/img/hobbies-min.jpeg" style = "width:100%">
                  </div>
                </div>
                <div class="form-group ">
                  <label for="inputHobbies">How much time does he/she spend on hobby (hour)</label>
                  <select id="inputHobbies" required min="0" max="24"class="form-control" name="daily[hobbies]" >
                    <option selected><%= daily.hobbies %></option>
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                    <option>11</option>
                    <option>12</option>
                    <option>13</option>
                    <option>14</option>
                    <option>15</option>
                    <option>16</option>
                  </select>
                </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <p>            </p>
            <a href="/workaholics/<%= workaholic_id %>" class="btn btn-secondary">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

