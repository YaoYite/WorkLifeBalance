<% include partials/header %>
<header class="masthead" style="background-image: url('/img/track-min.jpeg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Get started </h1>
              <span class="subheading">Get started by creating a profile for your loved one. This page shows the information about the people you want to help achieve a better work life balance. 
              Recording your loved one's time spent on family and hobbies is a good starting point to make sure they're enjoying life while also working</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 mx-auto"> 
    <a href="/workaholics/newWorkaholic" class="btn btn-success">Add person you want to record</a> 
        </div>
      </div>
    </div>

    <hr>

<div class="container">
    <div class="row">
          <div class="col-lg-12 col-md-12 mx-auto">
              <style>
                * {box-sizing: border-box}
                
                /* Set height of body and the document to 100% */
                body, html {
                    height: 100%;
                    margin: 0;
                    font-family: Arial;
                }
                
                /* Style tab links */
                .tablink {
                    background-color: #666;
                    color: white;
                    float: left;
                    border: none;
                    outline: none;
                    cursor: pointer;
                    padding: 14px 16px;
                    font-size: 17px;
                    width: 25%;
                }
                
                .tablink:hover {
                    /*background-color: #777;*/
                    background-color: #929593;
                }
                
                /* Style the tab content (and add height:100% for full page content) */
                .tabcontent {
                    color: black;
                    display: none;
                    padding: 100px 20px;
                    height: 100%;
                }
                
                #Home {background-color: white;}
                #News {background-color: white;}
                #Contact {background-color: white;}
                #About {background-color: white;}
                </style>
              <p>Click name to see the records</p>
              <div class="topnav">
                  <a class="active" >All people being recorded:</a>
                    <% workaholics.forEach(function(workaholic){ %>
                    <% if(currentUser && workaholic.user.id.equals(currentUser._id)){ %>
                  <a href="/workaholics/<%= workaholic._id %>#1"><%= workaholic.name %></a>
                    <% } %>
                    <% }); %>
              </div>
          </div>
    </div>
</div>

<% include partials/footer %>