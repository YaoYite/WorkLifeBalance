<% include partials/header %>
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/enjoylife.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Enjoy Life Now</h1>
              <span class="subheading">Where can we go, what can we do for a family activity</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <style>
        .containera {
          position: relative;
          width: 100%;
        }
        
        .imagea {
          display: block;
          width: 100%;
          height: 300px;
        }
        
        .overlay {
          position: absolute;
          top: 0;
          bottom: 0;
          left: 0;
          right: 0;
          height: 100%;
          width: 100%;
          opacity: 0;
          transition: .5s ease;
          background-color: #000000;
        }
        
        .containera:hover .overlay {
          opacity: 0.7;
        }
        
        .text {
          color: white;
          font-size: 40px;
          position: absolute;
          top: 50%;
          left: 50%;
          -webkit-transform: translate(-50%, -50%);
          -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
          text-align: center;
        }
        </style>

    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 ">
                <h3>Check out popular places in Victoria where your family can spend together</h3>
                <br>
            </div>
            <div class="col-lg-6 col-md-12 ">
                <div class="containera">
                    <a href="/arts">
                    <img src="img/arts.jpg" class="imagea">
                    <div class="overlay">
                        <div class="text">We are arts people</div>
                    </div>
                    </a>
                </div>
            </div> 
            <div class="col-lg-6 col-md-12 ">
                <div class="containera">
                    <a onclick="openForm()">
                    <img src="img/sports.jpg" class="imagea" href="/recreations">
                    <div class="overlay">
                        <div class="text">We are sports people</div>
                    </div>
                    </a>
                    <div class="form-popup" id="myForm">
                      <form action="/recreations" class="form-container">
                        <label for="sport"><h3>Your favourite sport</h3></label>
                        <!--<input type="text" placeholder="Enter Favorite Sports, type nothing get all" maxlength="20" pattern="[A-Za-z ]+" name="sport" title="Only letters allowed">-->
                        <select id="sport" class="form-control" name="sport">
                          <option selected >Football</option>
                          <option>Gym</option>
                          <option>Tennis</option>
                          <option>Soccer</option>
                          <option>Cricket</option>
                          <option>Cycling</option>
                          <option>Bowl</option>
                          <option>Skating</option>
                          <option>Swimming</option>
                          <option>Surf</option>
                          <option>Netball</option>
                          <option>Golf</option>
                          <option>Rugby</option>
                          <option>Volleyball</option>
                          <option>BMX</option>
                          <option>Basketball</option>
                          <option>Equestrian</option>
                          <option>Table Tennis</option>
                          <option>Motor sport</option>
                          <option>Baseball</option>
                          <option>Martial Arts</option>
                          <option>Sailing</option>
                          <option>Badminton</option>
                          <option>Boxing</option>
                          <option>Squash</option>
                          <option>Hockey</option>
                          <option>Billiard</option>
                          <option>Lacrosse</option>
                          <option>Softball</option>
                        </select>
                        <br>
                        <button type="submit" class="btn">GO</button>
                        <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
                      </form>
                    </div>

                    <script>
                    function openForm() {
                        document.getElementById("myForm").style.display = "block";
                    }
                    
                    function closeForm() {
                        document.getElementById("myForm").style.display = "none";
                    }
                    </script>
                </div>
            </div> 
        </div>
    </div>
    

    
<% include partials/footer %>