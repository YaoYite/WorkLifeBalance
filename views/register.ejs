<% include partials/header %>
<header class="masthead" style="background-image: url('/img/life-min.jpeg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Register</h1>
              <span class="subheading">Register on our website and start recording family and hobby times</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
        <h1>Sigh up form</h1>
        <form action="/register" method="POST">
          <div class="form-group">
              <label for="inputName">Name</label>
              <input id = "inputName" type="text" required maxlength="20" pattern="[A-Za-z0-9]+" title="Only number and letters allowed, no whitespaces", name="username" placeholder="username">
          </div>
          <div class="form-group">
              <label for="inputPassword">Password</label>
              <input id="inputPassword" type="password" required name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
              title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" placeholder="password">
          </div>
          <div class="form-group">
              <label for="inputEmail">Email</label>
              <input id="inputEmail" type="email" required maxlength="50" name="email" placeholder="email">
          </div>
            <button class = "btn btn-primary btn-sm">Submit</button>
        </form>

        <!--<a href="/register" class = "btn btn-primary btn-sm">Sign Up</a>-->
        <p>If you already have an account</p>
        <a href="/login" class = "btn btn-primary btn-sm">Login</a>
        <!--<a href="/logout" class = "btn btn-warning  btn-sm">Logout</a>-->
        </div>
      </div>
    </div>

<% include partials/footer %>